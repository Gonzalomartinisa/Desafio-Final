<%- include("layouts/navbar") %>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card mt-4">
                    <div class="card-body">
                        <form action="/signup" method="POST">
                            <h1>Registro de usuario</h1>
                            <div class="form-group">
                                <input type="firstName" name="firstName" placeholder="Nombre" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="name" name="lastName" placeholder="Apellido" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="name" name="address" placeholder="Direccion" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="number" name="country_code" placeholder="Codigo del pais: +54" class="form-control" autofocus>
                            <div class="form-group">
                                <input type="number" name="phone" placeholder="Telefono: 1112345678" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="age" placeholder="Edad" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="url" name="avatar" placeholder="Avatar" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" placeholder="ContraseÃ±a" class="form-control">
                            </div>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Registrarse</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    <% if (signupMensaje.length> 0) { %>
        <div class="alert alert-danger">
            <%= signupMensaje %>
        </div>
        <% } %>